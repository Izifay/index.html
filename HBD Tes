    <script>
      confetti({
        particleCount: 80,
        spread: 70,
        origin: { y: 0.6 },
      });

      const kartu = document.getElementById("kartu");

      let currentSlide = 1;
      let currentPhoto = 0;

      const photos = [
        "https://i.pinimg.com/736x/76/a2/54/76a254dfd5e244f720afd3df11caa657.jpg",
        "https://i.pinimg.com/736x/2b/95/9d/2b959d5bcfa3fba222b87f4523bdcbc8.jpg",
        "https://i.pinimg.com/736x/3c/db/56/3cdb5693fea9973d3ad2f4c82f35e8bb.jpg",
      ];

      renderSlide1();

      function renderSlide1() {
        kartu.innerHTML = `
          <h1 class="text-3xl m-2">Happy Birthday</h1>
          <h1 class="text-4xl text-blue-500 font-bold animate__animated animate__pulse animate__infinite">Zaki</h1>
            <button
            class="p-2 bg-blue-600 text-white rounded mt-5 w-full shadow-2xl rounded-2xl backdrop-blur-sm animate__animated animate__tada animate__repeat-2"
            onclick="renderSlideFoto()"
            >
            
            Klik Disini Ya
            </button>

        `;
      }

      function renderSlideFoto() {
        kartu.innerHTML = `
          <h2 class="text-xl font-semibold mb-3">Sorotan ðŸ“¸</h2>

          <img
            src="${photos[currentPhoto]}"
            class="rounded mb-3 mx-auto animate__animated animate__fadeIn"
          />

          <div class="flex justify-between gap-2">
            <button
              class="bg-blue-500 text-white px-3 py-1 rounded animate__animated animate__fadeIn hover:bg-blue-900"
              onclick="prevPhoto()"
            >
              â—€
            </button>
            
            <div class="text-sm text-blue-500 font-bold animate__animated animate__fadeIn">
                Lihat Sampai Selesai...
            </div>
             

            <button
              class="bg-blue-500 text-white px-3 py-1 rounded animate__animated animate__fadeIn hover:bg-blue-900"
              onclick="nextPhoto()"
            >
              â–¶
            </button>
          </div>

          <button
            class="mt-4 p-2 bg-green-600 text-white rounded w-full hover:bg-green-800 animate__animated animate__fadeIn hover:bg-green-900"
            onclick="renderSlideUcapan()"
          >
            Lanjut
          </button>
        `;
      }

      function prevPhoto() {
        currentPhoto =
          currentPhoto === 0 ? photos.length - 1 : currentPhoto - 1;
        renderSlideFoto();
      }

      function nextPhoto() {
        currentPhoto =
          currentPhoto === photos.length - 1 ? 0 : currentPhoto + 1;
        renderSlideFoto();
      }

      function renderSlideUcapan() {
        kartu.innerHTML = `
          <h1 class="font-semibold animate__animated animate__zoomIn">
            Selamat ulang tahun, Ya Semoga tahun ini makin banyak kebahagiaan,
            Hapalan makin lancar, dan segala impian jadi kenyataan.
            ðŸŽ‰ðŸŽ‚
          </h1>

          <h2 class="mt-3 animate__animated animate__fadeIn">
            - Dari : Fairuz -
          </h2>

          <button
            class="p-2 bg-slate-600 text-white rounded mt-5 w-full hover:bg-slate-900"
            onclick="renderSlide1()"
          >
            Tutup
          </button>
        `;
      }
